---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">In Progress</div>
  </div>

  <HorizontalCard
    title="OwlShield"
    img="/post_img.webp"
    desc="OwlShield is an LLM Safety Firewall that protects your LLM applications from malicious attacks and harmful outputs. It was developed with a group of friends while I was serving my National Service, where we won first place in National Supercomputing Centre's High Performance Computing and Innovation Competition in the Senior (Univesities) category."
    url="hpcic23.sg"
  />
  <HorizontalCard
    title="Hong De Tang Therapy Center Company Website"
    img="/post_img.webp"
    desc="A landing on a webpage for my family business."
    url="https://hongdetang.co"
    badge="Developing"
  />
  <div class="divider my-0"></div>
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Completed Projects</div>
  </div>

  <HorizontalCard
    title="AI App Store"
    img="/content/projects/aas.png"
    desc="An open-source store for hosting model cards, developed internally at DSTA's Digital Hub Programme Center as part of my Polytechnic internship. Built using Vue.js and FastAPI."
    url="https://github.com/DinoHub/appstore-ai"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Emotive"
    img="/content/projects/emotive.png"
    desc="AI-powered emotion detection. Built using Flask, Tensorflow and served on Heroku (RIP Heroku)."
    url="https://github.com/Tien-Cheng/Emotive"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Rentier"
    img="/content/projects/rentier.png"
    desc="Machine learning-powered property rent valuation. Built using Flask and Scikit-Learn."
    url="https://github.com/Tien-Cheng/Rentier"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Project Cactus"
    img="/content/projects/cactus.png"
    desc="Using AI to detect sus news articles."
    url="https://github.com/Ducksss/Project-Cactus"
  />
</BaseLayout>
